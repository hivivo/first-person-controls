{
	"extends": "eslint:recommended",
  "env": {
		"browser": true,
    "es6": true,
    "node": true
  },
	"parserOptions": {
		"sourceType": "module"
	},
  "rules": {
    "indent": [2, 2],
    "quotes": [2, "single"],
    "linebreak-style": [2, "unix"],
    "semi": [2, "never"],
		"no-var": 1,
		"no-unused-vars": [2, {
			"argsIgnorePattern": "^_"
		}]
  },
	"globals": {
		"__ENV__": true
	}
}
